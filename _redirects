# SPA fallback for client-side routing
/*    /index.html   200

# Redirect root to index.html
/     /index.html   200

# Allow JSON files to be served directly
/data/*    /data/:splat   200

# Allow JS files to be served directly
/js/*     /js/:splat    200

# Allow image files to be served directly
/imagenes/*    /imagenes/:splat    200

# Allow favicon to be served
/favicon.svg    /favicon.svg    200

# Allow article files to be served directly
/articulos/*    /articulos/:splat    200
